@import "reset"

body
  font bold 18px "Helvetica Neue", Arial, Helvetica, sans-serif

ul
  list-style-type none

a, a:visited
  color #F95A5A
  text-decoration none

a:hover
  color #665248

#home-view
  width 1490px
  margin 20px auto
  #stats
    float left
    width 200px
    margin-right 10px
    margin-top 40px
    font-size 13px
  #edit
    float left
    width 700px
    margin-top 10px
    #tools
      position fixed
      background white
      padding 5px
      top 20px
      button
        margin-right 10px
    input, textarea
      font-size 14px
      width 600px
    input
      margin-bottom 10px
    textarea
      height 4400px
  #markdown
    width 580px
    float right
    margin-top 40px
    font-family georgia

/* Default font settings */
body
  font-size 15px
  color #666
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1,h2,h3,h3,h4
  font-weight normal
  color #222
  clear left

h1
  font-size 5em
  line-height 1.4
  margin-bottom 0.5em
h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

/* Text elements */
p
  margin 0 0 1.5em
